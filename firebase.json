{
  "hosting": {
    "rewrites": [
      {
        "source": "/link/**",
        "dynamicLinks": true
      }
    ],
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "/public/static/js/process.js",
      "/old",
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": "8888"
    }
  }
}
